[root memory]
interval=36000
command=./storage.sh /

[weather]
interval=10
command=[ $button ] && i3-sensible-terminal -e bash -c "curl wttr.in; read" || ./weather.sh

[network]
interval=60
command=./net.sh

[battery]
interval=10
command=./battery.sh


[time]
command=date '+%Y-%m-%d %I:%M:%S'
interval=1
